{
  "agent": {
    "run_as_user": "cwagent"
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "${LOGS_DIRECTORY_PATH}/access.log",
            "log_group_name": "$ACCESS_LOG_GROUP_NAME",
            "log_stream_name": "$HOSTNAME"
          },
          {
            "file_path": "${LOGS_DIRECTORY_PATH}/application.log",
            "log_group_name": "$APPLICATION_LOG_GROUP_NAME",
            "log_stream_name": "$HOSTNAME"
          },
          {
            "file_path": "${LOGS_DIRECTORY_PATH}/error.log",
            "log_group_name": "$ERROR_LOG_GROUP_NAME",
            "log_stream_name": "$HOSTNAME"
          }
        ]
      }
    }
  }
}
